#!/usr/bin/bash

usage () {

cat << USAGE
$(basename $0) [USER]
List all repositories from a github user.

EXAMPLE:
USER - list all repositories:
	git-repos USER

USAGE
exit
}

fail () {
	printf "\r\033[2K[\033[0;31m$1\033[0m] $2"
	exit
}
if [ "$1" == "--help" ]; then
				usage
fi
USER=$1
PROXY=$(git config --get http.proxy)
if [ $# -lt 1 ]; then
				GHUSER=$(git config --get github.user)
				USER=${GHUSER}
fi

#						 jq -C '((if (.detail|length) > 0 then .detail else empty end),(.results[]?|.["name"]))'|			\
REPOS=`curl -L -s -x "${PROXY}" "https://api.github.com/users/${USER}/repos"| \
				jq -C .[].clone_url`
#||fail ${USER} "not found")|sort`

#if [ -n "$2" ]; then
#	REPOS=`echo "${REPOS}"|(grep "$2"||fail $2 "not found")`
#fi

echo "${REPOS}"

## TODO
